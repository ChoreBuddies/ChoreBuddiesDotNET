@using ChoreBuddies.Frontend.Features.Authentication
@inject IAuthService _authService
@inject NavigationManager _navigationManager
@inject AuthenticationStateProvider _authenticationStateProvider


<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly" OnNavigateAsync="HandleNavigation">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" Context="context">
                <NotAuthorized>
                    @if (context.User.Identity?.IsAuthenticated != true)
                    {
                        <RedirectToLogin />
                    }
                    else
                    {
                        <CenteredMessage Message="You are not authorized to access this resource."/>
                    }
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <CenteredMessage Message="Sorry, there's nothing at this address." />
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

@code {

    private async Task HandleNavigation(Microsoft.AspNetCore.Components.Routing.NavigationContext context)
    {
        // Do NOT check for these routes (avoid redirect loop)
        var path = context.Path.ToLower();
        if (path == "household/setup" ||
            path == "login" ||
            path == "signup" ||
            path == "household/join" ||
            path == "household/create")
            return;

        var authState = await _authenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        var householdId = await _authService.GetHouseholdIdAsync();
        if (user.Identity?.IsAuthenticated ?? false && householdId < 0)
        {
            _navigationManager.NavigateTo("/household/setup", true);
        }
    }
}