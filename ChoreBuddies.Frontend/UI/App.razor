@using ChoreBuddies.Frontend.Features.User
@inject IUserService _userService
@inject NavigationManager _navigationManager

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly" OnNavigateAsync="HandleNavigation">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    @if (context.User.Identity?.IsAuthenticated != true)
                    {
                        <RedirectToLogin />
                    }
                    else
                    {
                        <CenteredMessage Message="You are not authorized to access this resource."/>
                    }
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <CenteredMessage Message="Sorry, there's nothing at this address." />
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

@code {
    private async Task HandleNavigation(Microsoft.AspNetCore.Components.Routing.NavigationContext context)
    {
        // Do NOT check for these routes (avoid redirect loop)
        var path = context.Path.ToLower();
        Console.WriteLine("AAAAAA" + path);
        if (path == "no-household" || path == "login" || path == "join-household" || path == "create-household")
            return;

        var user = await _userService.GetCurrentUserAsync();
        if (user is not null && user.householdId is null)
        {
            _navigationManager.NavigateTo("/no-household", true);
        }
    }
}