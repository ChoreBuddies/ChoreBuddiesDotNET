@using Features.Chores
@using Shared.Chores

@inject IChoresService choresService
@inject ISnackbar Snackbar
@inject NavigationManager navigationManager
@inject IDialogService DialogService

<MudPaper Elevation="1" Class="pa-4 rounded-lg">
    <MudGrid>
        <MudItem xs="8">
            <MudText Typo="Typo.caption" Color="Color.Secondary">@GetDueText()</MudText>
            <MudText Typo="Typo.h6">@GetTitle()</MudText>
            <MudText Typo="Typo.body2">@GetDescription()</MudText>

            <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="mt-2" OnClick="ViewChoreDetails">
                View Task →
            </MudButton>
        </MudItem>

        <MudItem xs="4" Class="d-flex justify-end align-center">
            <MudStack>
                <MudButton Color="Color.Default" Variant="Variant.Outlined" Class="mt-1" OnClick="OpenReminderDialog"> @*TODO: Add navigation to chores when they're done*@
                    Set a reminder
                </MudButton>
                <MudButton Color="Color.Default" Variant="Variant.Outlined" Class="mt-1" OnClick="MarkChoreAsDone">
                    Mark as done
                </MudButton>
            </MudStack>
        </MudItem>
    </MudGrid>
</MudPaper>

@code {
    [Parameter] public ChoreDto? _choreDto { get; set; }
    [Parameter] public EventCallback OnChanged { get; set; }
    public string? GetTitle() => _choreDto?.Name;
    public string? GetDescription() => _choreDto?.Description;
    public string? GetDueText() => _choreDto?.DueDate.ToString();
    public void ViewChoreDetails() => navigationManager.NavigateTo($"/chore-details/{_choreDto!.Id}");
    public async Task MarkChoreAsDone()
    {
        if (await choresService.MarkChoreAsDoneAsync(_choreDto!.Id) is not null)
        {
            Snackbar.Add("Marked successfully", Severity.Success);
            await OnChanged.InvokeAsync();
        }
        else
        {
            Snackbar.Add("An enexpected error occured while marking chore as done", Severity.Error);
        }
    }
    private async Task OpenReminderDialog()
    {
        var parameters = new DialogParameters
        {
            ["Label"] = "Set reminder"
        };

        var options = new DialogOptions
        {
            CloseButton = true,
            MaxWidth = MaxWidth.Small,
            FullWidth = true
        };

        var dialog = await DialogService.ShowAsync<DateTimePickerPopUp>(
            title: "",
            parameters: parameters,
            options: options);

        var result = await dialog.Result;

        if (!result.Canceled)
        {
            var dateTime = (DateTime)result.Data;
            Console.WriteLine(dateTime);
        }
    }

}
