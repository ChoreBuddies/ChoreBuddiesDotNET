@inherits LayoutComponentBase

@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IAuthApiService authApiService
@inject NavigationManager Navigation
@inject IAuthService authService

<MudThemeProvider Theme="_theme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<AuthorizeView>
    <Authorized>
        <!-- Layout for authenticated users -->
        <MudLayout>
            <MudAppBar Elevation="2" Color="Color.Surface" Fixed="true">
                <AppTitleLogo />
                <MudSpacer />

                <!-- Top Navigation Items -->
                @if (_showFullHouseLayout)
                {
                    <div class="d-none d-md-block">
                        <MudButton Class="app-bar" OnClick="@(() => Navigation.NavigateTo("/"))">Dashboard</MudButton>
                        <MudButton Class="app-bar" OnClick="@(() => Navigation.NavigateTo("/chores"))">Chores</MudButton>
                        <MudButton Class="app-bar" OnClick="@(() => Navigation.NavigateTo("/rewards"))">Rewards</MudButton>
                        <MudButton Class="app-bar" OnClick="@(() => Navigation.NavigateTo("/chat"))">Chat</MudButton>
                        <MudButton Class="app-bar" OnClick="@(() => Navigation.NavigateTo("/household/manage"))">My household</MudButton>
                        </div>
                }
                <MudMenu Icon="@Icons.Material.Filled.AccountCircle" AnchorOrigin="Origin.BottomRight" Class="black-icon" ActivationEvent="@MouseEvent.MouseOver">
                    <MudMenuItem OnClick="@(() => Navigation.NavigateTo("/profile"))">Profile</MudMenuItem>
                    <MudMenuItem OnClick="@(() => Navigation.NavigateTo("/settings/notifications"))">Settings</MudMenuItem>
                    <MudDivider Style="border-color: black"/>
                    <MudMenuItem OnClick="@Logout">Logout</MudMenuItem>
                </MudMenu>
                <div class="d-block d-md-none">
                    <MudIconButton Icon="@Icons.Material.Filled.Menu" OnClick="@ToggleDrawer" />
                </div>
            </MudAppBar>

            <!-- Drawer for mobile navigation -->
            <MudDrawer @bind-Open="@_drawerOpen" Anchor="Anchor.Right" Elevation="2" Variant="@DrawerVariant.Temporary">
                <MudDrawerHeader>
                    <MudText Typo="Typo.h6">@AppTitle</MudText>
                </MudDrawerHeader>
                <MudNavMenu>
                    @if (_showFullHouseLayout)
                    {
                        <MudNavLink Href="/" Icon="@Icons.Material.Filled.Dashboard">Dashboard</MudNavLink>
                        <MudNavLink Href="/chores" Icon="@Icons.Material.Filled.Task">Chores</MudNavLink>                    <MudNavLink Href="/rewards" Icon="@Icons.Material.Filled.Star">Rewards</MudNavLink>                    <MudNavLink Href="/chat" Icon="@Icons.Material.Filled.Chat">Chat</MudNavLink>
                        <MudNavLink Href="/household/manage" Icon="@Icons.Material.Filled.Settings">My household</MudNavLink>
                    }
                </MudNavMenu>
            </MudDrawer>

            <!-- Desktop Sidebar -->
            <div class="d-block d-md-none">
                <!-- Mobile view - no permanent sidebar -->
                <MudMainContent>
                    <MudContainer MaxWidth="MaxWidth.Large" Class="py-6">
                        @Body
                    </MudContainer>
                </MudMainContent>
            </div>
            
             <!-- Desktop view with sidebar -->
            <div class="d-none d-md-block">
                <MudMainContent>
                    <div class="main-container">
                        @if (_showFullHouseLayout)
                        {
                            <div class="layout-sidebar">
                                <div class="d-flex flex-column" style="height: 100%;">
                                    <!-- Quick Actions Section -->
                                    <div class="pa-4">
                                        <MudText Typo="Typo.subtitle2" Class="mb-3">Quick Actions</MudText>
                                        @if (!_isChild)
                                        {
                                            <MudButton StartIcon="@Icons.Material.Filled.Add"
                                            Color="Color.Primary"
                                            Variant="Variant.Filled"
                                            FullWidth="true"
                                            Class="mb-2"
                                            OnClick="@AddNewChore">
                                                Add New Chore
                                            </MudButton>
                                        }
                                        <MudButton StartIcon="@Icons.Material.Filled.List"
                                                    Color="Color.Default"
                                                    Variant="Variant.Outlined"
                                                    FullWidth="true"
                                                    Class="mb-2"
                                                    OnClick="@ViewAllChores">
                                            View All Chores
                                        </MudButton>
                                        <MudButton StartIcon="@Icons.Material.Filled.CardGiftcard"
                                                    Color="Color.Default"
                                                    Variant="Variant.Outlined"
                                                    FullWidth="true"
                                                    OnClick="@RedeemRewards">
                                            Redeem Rewards
                                        </MudButton>
                                    </div>

                                    <MudDivider Style="border-color: #FFFFFF; color: #FFFFFF" />

                                    <!-- Recent Chat Section -->
                                    @if (_showMiniChat)
                                    {
                                        <div class="pa-4 flex-grow-1 d-flex flex-column" style="min-height: 0">
                                            <MudText Typo="Typo.subtitle2" Class="mb-3">Recent Chat</MudText>
                                            <ChoreBuddies.Frontend.Features.Chat.HouseholdChat IsSidebar="true"/>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                        <div class="layout-content">
                            <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="py-6">
                                @Body
                            </MudContainer>
                        </div>
                    </div>
                </MudMainContent>
            </div>
        </MudLayout>
    </Authorized>

    <NotAuthorized>
        <!-- Layout for non-authenticated users -->
        <MudLayout>
            <MudAppBar Elevation="0" Color="Color.Transparent">
                <AppTitleLogo />
                <MudSpacer />
                <div class="d-none d-md-block">
                    <MudButton Class="app-bar" OnClick="@(() => Navigation.NavigateTo("/features"))">Features</MudButton>
                    <MudButton Class="app-bar" OnClick="@(() => Navigation.NavigateTo("/support"))">Support</MudButton>
                    <MudButton Class="rounded-lg" Variant="Variant.Filled" Size="Size.Large"
                               OnClick="@(() => Navigation.NavigateTo("/login"))"
                               Style="background-color: #5B6FE6; color: white; text-transform: none; margin-left: 10px;">
                        Login
                    </MudButton>
                    <MudButton Class="app-bar" OnClick="@(() => Navigation.NavigateTo("/signup"))">Sign Up</MudButton>
                </div>
                <div class="d-block d-md-none">
                    <MudIconButton Icon="@Icons.Material.Filled.Menu" OnClick="@ToggleDrawer" />
                </div>
            </MudAppBar>

            <!-- Mobile drawer for non-authenticated users -->
            <MudDrawer @bind-Open="@_drawerOpen" Anchor="Anchor.Right" Elevation="2" Variant="@DrawerVariant.Temporary">
                <MudDrawerHeader>
                    <MudText Typo="Typo.h6">@AppTitle</MudText>
                </MudDrawerHeader>
                <MudNavMenu>
                    <MudNavLink Href="/features">Features</MudNavLink>
                    <MudNavLink Href="/support">Support</MudNavLink>
                    <MudNavLink Href="/login">Login</MudNavLink>
                    <MudNavLink Href="/signup">Sign Up</MudNavLink>
                </MudNavMenu>
            </MudDrawer>

            <MudMainContent>
                @Body
            </MudMainContent>
        </MudLayout>
    </NotAuthorized>
</AuthorizeView>

@code {
    private const string AppTitle = "ChoreBuddies"; // TODO make strings file

    private bool _drawerOpen = false; 
    private bool _showMiniChat = true;
    private bool _showFullHouseLayout = false;
    private bool _isChild = true;

    private MudTheme _theme = new MudTheme()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = "#5B6FE6",
            Secondary = "#424242",
            Background = "#FFFFFF",
            Surface = "#FFFFFF",
            AppbarBackground = "#FFFFFF",
            DrawerBackground = "#FFFFFF",
            DrawerText = "rgba(0,0,0, 0.87)",
            DrawerIcon = "rgba(0,0,0, 0.54)"
        },
        Typography = new Typography()
        {
            Default = new DefaultTypography()
            {
                FontFamily = new[] { "Inter", "-apple-system", "BlinkMacSystemFont", "Segoe UI", "Roboto", "sans-serif" }
            }
        }
    };

    protected override async Task OnInitializedAsync()
    {
        AuthenticationStateProvider.AuthenticationStateChanged += OnAuthStateChanged;
        Navigation.LocationChanged += OnLocationChanged;

        CheckMiniChatVisibility();
        CheckLayoutVisibility();
        _isChild = await authService.IsChildAsync();
    }

    private async void OnAuthStateChanged(Task<AuthenticationState> task)
    {
        _isChild = await authService.IsChildAsync();
        await InvokeAsync(StateHasChanged);
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        CheckMiniChatVisibility();
        CheckLayoutVisibility();
        StateHasChanged();
    }

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }

    private void CheckMiniChatVisibility()
    {
        var relativePath = Navigation.ToBaseRelativePath(Navigation.Uri).ToLower();

        _showMiniChat = !relativePath.StartsWith("chat");
    }

    private void CheckLayoutVisibility()
    {
        var relativePath = Navigation.ToBaseRelativePath(Navigation.Uri).ToLower();

        _showFullHouseLayout = !relativePath.StartsWith("household/setup") &&  !relativePath.StartsWith("household/join") &&  !relativePath.StartsWith("household/new");
    }


    private void AddNewChore()
    {
        Navigation.NavigateTo("/chores/new", forceLoad: true);
    }

    private void ViewAllChores()
    {
        Navigation.NavigateTo("/chores");
    }

    private void RedeemRewards()
    {
        Navigation.NavigateTo("/rewards");
    }

    private async void Logout()
    {
        await authApiService.RevokeAsync();
        Navigation.NavigateTo("/");
    }

    public async ValueTask DisposeAsync()
    {
        AuthenticationStateProvider.AuthenticationStateChanged -= OnAuthStateChanged;
        Navigation.LocationChanged -= OnLocationChanged;
    }
}

<style>
    .app-bar {
        color: #000;
        padding: 20px;
    }

    .black-icon .mud-icon-root {
        color: black;
    }


    .main-container {
        display: flex;
        flex-direction: row;
        width: 100vw;
        height: calc(100vh - var(--mud-appbar-height));
        overflow: hidden;
        position: relative;
    }

    .layout-sidebar {
        width: 320px;
        flex: 0 0 320px; /* Don't grow, don't shrink, stay 320px */
        height: 100%;    /* Fill the container height */
        overflow-y: auto; /* Scroll INSIDE sidebar if needed */
        border-right: 1px solid var(--mud-palette-divider);
        background-color: var(--mud-palette-background);
    }

    .layout-content {
        flex: 1;          
        height: calc(100vh - var(--mud-appbar-height));     
        overflow-y: auto; 
        overflow-x: hidden;
    }
</style>